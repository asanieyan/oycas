 <div> 
 <div class='' style='background-color:white;float:right'> 
       <%=render_p 'login_form'%>  
       <%=javascript_tag <<-eof
            $$('.login-label').each(function(e){
                $(e).addClassName("bold-gray")
            })
       eof
       %> 
 </div>
 <div style='width:500px;'>
     <div class='ad0' style='background-color:#F0F0F0;'> 
        <div id='' style='display:table;font-size:18;font-weight:bold;padding:10px;color:#FF7400'>    
           <br>
            Want to know who is in your class? <span style='font-size:10pt'>Come Inside and start interacting with your classmates live!</span>
    
           <br><br>
        </div>
     </div>
  </div>
  <div class='title-div status-box' style='clear:right;margin-top:20px;margin-bottom:20px;'>
    To learn more about Oycas <%=link_to 'take the Site tour now!' ,'/access/tour'%>
  </div>  
  <div style='text-align:justify'>

     <div class='ad1' style='clear:right;background-color:#F0F0F0'> 
        <div id='centered' style='display:table;font-size:14;font-weight:bold;padding:10px;color:#FF7400'>    
